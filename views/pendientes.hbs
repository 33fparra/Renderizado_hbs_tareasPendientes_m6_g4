<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pendientes</title>
  </head>
  <body>
    <h1>Listado de pendientes</h1>
    <table>
       {{#if tareas}}
        <ul>
          {{#each tareas}}
            <li>{{nombre}}</li>
          {{/each}}
        </ul>
      {{else}}
        <p>No hay tareas pendientes por hacer</p>
      {{/if}}
    </table>
  </body>
</html>

